<div class="row-fluid">
  <div class="span12">
    <ul class="breadcrumb-beauty">
    <li>
      <a href="index-2.html"><span class="fs1" aria-hidden="true" data-icon="&#xe002;"></span> Post</a>
    </li>
    <li>
      <a href="#">New Post</a>
    </li>
  </ul>
  <br>
    <div class="widget no-margin">
      <div class="widget-header">
        <div class="title">
          <span class="fs1" aria-hidden="true" data-icon="&#xe14a;"></span> Post Table
        </div>
      </div>
      <br/>      
      <div class= "span3 input-top-margin"><%= link_to 'New Post', new_post_path , :class => "btn btn-success btn-small hidden-phone" %></div><br/>
      <div class="widget-body">
        <div id="dt_example" class="example_alt_pagination">
          <table class="table table-condensed table-striped table-hover table-bordered pull-left" id="data-table">    
            <thead>
              <tr>
                <th style="width:20%">Title</th>
                <th style="width:20%">Technology</th>
                <th style="width:20%">Posted By</th>
                <th style="width:20%">Action</th>
              </tr>
            </thead>
            <tbody>
              <% @posts.each do |post| %>
              <tr class="gradeU">
                <td><%= post.title %></td>
                <% @technologies.each do |tech|%>
                  <% if post.technology_id == tech.id %>
                    <td><%= tech.name%></td>
                  <%end%>
                <%end%>
                <% @users.each do |user| %>
                  <% if post.user_id == user.id%>
                    <td><%= user.first_name%></td>
                  <%end%>               
                <%end%>
                <td> 
                  <%= link_to 'Edit', edit_post_path(post),  :class => "btn btn-success btn-small hidden-phone" %>&nbsp;&nbsp;
                  <%= link_to 'Show', post,:class=>"btn btn-primary" %>&nbsp;&nbsp;
                  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } ,  :class => "btn btn-danger btn-small hidden-phone"%>
                </td>
              </tr>    
              <%end%>                    
            </tbody>
          </table>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
  </div>
</div>





