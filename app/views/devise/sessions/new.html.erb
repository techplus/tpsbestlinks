<h1 class="center-align-text">Login</h1>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  
  <div class="content">
    <div>
    <%= f.email_field :email,:class=>"input input-block-level", :placeholder => "Email Address", :autofocus => true %></div>
  </div>

  <div class="content">
    <div>
    <%= f.password_field :password ,:class=>"input input-block-level", :placeholder => "Password"%></div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", :class=>"btn btn-info pull-right" %></div>
<% end %>

<%= render "devise/shared/links" %>
